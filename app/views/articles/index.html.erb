<div class="page-header">
<h1>Listing all Articles</h1>
</div>

<%= link_to "New Article", new_article_path, class: "btn btn-info btn-lg", id:"new-article-btn" %>
<% @articles.each do |article| %>

<div class="well well-lg back-color">
 
  <div class="article-title">
    <%= link_to article.title, article_path(article) %>
  </div>
  <div class="article-body-preview">
    <%= truncate(article.body, length: 500) %>
  </div>
  <div class="author">
    <% if article.user %>
      <small>Created by: <%= article.user.email %></small>
    <% end %>
  </div>
</div>
<% end %>